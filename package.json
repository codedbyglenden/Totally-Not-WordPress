{
	"name": "totally-not-wordpress",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"test": "stylelint 'assets/src/scss/**/*.scss' && eslint assets/src/**/*.ts -c ./eslintrc.json && phpcbf -p -v . --standard=./phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules $PWD && phpcs -p -s -v -n . --standard=phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules $PWD",
		"test-ts": "tsc --noemit --noEmitOnError; eslint assets/src/**/*.ts -c ./eslintrc.json",
		"fix-ts": "eslint assets/src/**/*.ts -c ./eslintrc.json --fix",
		"test-php": "phpcs -p -s -v -n . --standard=phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules $PWD",
		"fix-php": "phpcbf -p -v . --standard=./phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules $PWD",
		"test-scss": "stylelint 'assets/src/scss/**/*.scss'",
		"fix-scss": "stylelint 'assets/src/scss/**/*.scss' --fix",
		"watch-scss": "gulp sass:watch --gulpfile compilers/gulpfile.js",
		"build-scss": "gulp sass --gulpfile compilers/gulpfile.js",
		"watch-ts": "vite build --config compilers/vite.config.ts --watch",
		"build-ts": "vite build --config compilers/vite.config.ts",
		"production": "vite build --config compilers/vite.config.ts && gulp sass --gulpfile compilers/gulpfile.js"
	},
	"devDependencies": {
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-dart-sass": "^1.0.2",
		"gulp-rename": "^2.0.0",
		"gulp-uglifycss": "^1.1.0",
		"path": "^0.12.7",
		"stylelint": "^15.3.0",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-recommended-scss": "^9.0.1",
		"stylelint-config-standard-scss": "^7.0.1",
		"@wordpress/stylelint-config": "^21.12.0",
		"stylelint-scss": "^4.6.0",
		"eslint": "^8.37.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"@types/web": "^0.0.99",
		"@typescript-eslint/eslint-plugin": "^5.57.0",
		"@typescript-eslint/parser": "^5.57.0",
		"@vitejs/plugin-react": "^3.1.0",
		"typescript": "^5.0.2",
		"vite": "^4.2.1"
	}
}
